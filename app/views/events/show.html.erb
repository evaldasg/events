<article>
  <header>
  <h1><%= @event.name %></h1>
  </header>
  <p><%= @event.description %></p>
  <h3>When</h3>
  <p><%= @event.starts_at %></p>
  <h3>Where</h3>
  <p><%= @event.location %></p>
  <h3>Price</h3>
  <p><%= formated_price(@event) %></p>
</article>
<%= link_to 'Edit', edit_event_path %> |
<%= link_to 'Delete', event_path(@event), method: :delete, data: {confirm: 'Are you sure?'} %> |
<%= link_to "All Events", events_path %>
